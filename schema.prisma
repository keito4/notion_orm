generator client {
  provider = "notion-orm"
  output   = "./src/generated"
  types    = "notionTypes.ts"
  client   = "notionClient.ts"
}

model Task @notionDatabase("aac810fcb3414dbb9c46ce485bc6449b") {
Name              String    @title @map("Name")
completed         Boolean?  @checkbox @map("完了")
emphasized        Boolean?  @checkbox @map("注力")
subItem           String[]  @relation @map("Sub-item")
similarPage       String[]  @relation @map("似てるページ")
date              String?   @date @map("日付")
manager           Json?     @people @map("責任者")
archived          Boolean?  @checkbox @map("アーカイブ")
oykotTimeline     String[]  @relation @map("OYKOT Timeline")
action            String[]  @relation @map("Action")
objectiveProgress String?   @formula @map("Objective進行度")
parentItem        String[]  @relation @map("Parent item")
actionProgress    String?   @formula @map("Action進行度")
}

model Document @notionDatabase("13f70a52207f80d58f64cdc627123f87") {
title       String    @title @map("Title")
content     String?   @richText @map("Content")
status      String    @select @map("Status")
domain      Domain[]  @relation @map("Domain")
tags        String[]  @multiSelect @map("Tags")
createdAt   CreatedTime  @date @map("作成日時")
author      Json?     @people @map("作成者")
}

model Domain @notionDatabase("f6e300b8598e42208a2c163444655842") {
name        String     @title @map("Name")
description String?    @richText @map("Description")
isActive    Boolean    @checkbox @map("Is Active")
documents   Document[] @relation @map("Documents")
}
