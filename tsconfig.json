{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "lib": ["ES2022"],
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "sample.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
