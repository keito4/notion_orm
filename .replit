modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
# Replit で「Run」ボタンを押したときに動かすワークフロー名
runButton = "Project"

# -------------------------------------------------------------------
# 1. 「Project」というワークフロー（例: pnpm run generate）
# -------------------------------------------------------------------
[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
# 依存関係をインストール
task = "packager.installForAll"

[[workflows.workflow.tasks]]
# "pnpm run generate" を実行
task = "shell.exec"
args = "pnpm run generate"

# -------------------------------------------------------------------
# 2. 「Test」というワークフロー（例: pnpm run test）
# -------------------------------------------------------------------
[[workflows.workflow]]
name = "Test"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
# 依存関係をインストール（または必要であれば省略可）
task = "packager.installForAll"

[[workflows.workflow.tasks]]
# "pnpm run test" を実行
task = "shell.exec"
args = "pnpm run test"

# -------------------------------------------------------------------
# 3. 「Lint」というワークフロー（例: pnpm run lint）
# -------------------------------------------------------------------
[[workflows.workflow]]
name = "Lint"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
args = "pnpm run lint"
task = "shell.exec"

# -------------------------------------------------------------------
# 4. 「Build」というワークフロー（例: pnpm exec tsc）
# -------------------------------------------------------------------
[[workflows.workflow]]
name = "Build"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
args = "pnpm exec tsc"
task = "shell.exec"
