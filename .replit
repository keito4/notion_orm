modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

# -------------------------------------------------------------------
# 1. 「Project」というワークフロー（例: pnpm run generate）
# -------------------------------------------------------------------
[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm run generate"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test"

# -------------------------------------------------------------------
# 2. 「Test」というワークフロー（例: pnpm run test）
# -------------------------------------------------------------------
[[workflows.workflow]]
name = "Test"
author = "agent"
mode = "sequential"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm run test"

# -------------------------------------------------------------------
# 3. 「Lint」というワークフロー（例: pnpm run lint）
# -------------------------------------------------------------------
[[workflows.workflow]]
name = "Lint"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
args = "pnpm run lint"
task = "shell.exec"

# -------------------------------------------------------------------
# 4. 「Build」というワークフロー（例: pnpm exec tsc）
# -------------------------------------------------------------------
[[workflows.workflow]]
name = "Build"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
args = "pnpm exec tsc"
task = "shell.exec"

[deployment]
run = ["sh", "-c", "pnpm run test"]
